<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/buttonCreateStudent"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:layout_marginStart="121dp"
        android:layout_marginTop="92dp"
        android:layout_marginEnd="120dp"
        android:layout_marginBottom="49dp"
        android:text="Create Student"
        app:layout_constraintBottom_toTopOf="@+id/textViewRecordCount"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />


    <TextView
        android:id="@+id/textViewRecordCount"
        android:layout_width="fill_parent"
        android:layout_height="21dp"
        android:layout_below="@+id/buttonCreateStudent"
        android:layout_marginTop="66dp"
        android:layout_marginBottom="42dp"
        android:gravity="center"
        android:padding="1dp"
        android:text="0 records found"
        app:layout_constraintBottom_toTopOf="@+id/scrollViewRecords"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonCreateStudent" />


    <ScrollView
        android:id="@+id/scrollViewRecords"
        android:layout_width="346dp"
        android:layout_height="222dp"
        android:layout_below="@+id/textViewRecordCount"
        android:layout_marginStart="18dp"
        android:layout_marginTop="42dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewRecordCount">


        <LinearLayout
            android:id="@+id/linearLayoutRecords"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        </LinearLayout>

    </ScrollView>




</android.support.constraint.ConstraintLayout>